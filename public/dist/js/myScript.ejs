
$('.modal').on('show.bs.modal', function () {
    $('.container').addClass('blur');
})
$('.modal').on('hide.bs.modal', function () {
    $('.container').removeClass('blur');
    $(this).find('form').trigger('reset');
    $(".invalid").hide();
    $("input").removeClass  ('error');
})

